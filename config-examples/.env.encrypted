# Configurações com valores criptografados para máxima segurança
# Este arquivo contém valores sensíveis criptografados

# Perfil de ambiente
PROFILE=production

# Configurações de criptografia
ENABLE_FIELD_ENCRYPTION=true
ENCRYPTION_KEY=sua_chave_super_secreta_aqui
ENCRYPTION_SALT=salt_producao_personalizado

# Configurações básicas
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=WARNING

# Performance HTTP
MAX_CONCURRENT_REQUESTS=100
MAX_CONCURRENT_DOWNLOADS=50
MAX_CONNECTIONS_PER_HOST=100
CONNECTION_POOL_SIZE=200

# Compressão
ENABLE_GZIP_COMPRESSION=true
GZIP_MINIMUM_SIZE=1000
HTTP2_ENABLED=true

# Workers
UVICORN_WORKERS=4
CELERY_WORKERS=4

# Redis
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# Bulk operations
BULK_BATCH_SIZE=1000
BULK_INSERT_CHUNK_SIZE=500

# CORS - restritivo
CORS_ORIGINS=["https://pdpj.gov.br", "https://app.pdpj.gov.br"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["Content-Type", "Authorization", "X-API-Key"]

# API
API_PREFIX=/api/v1
API_TITLE=PDPJ Process API - Production Encrypted
API_DESCRIPTION=API para consulta e armazenamento de processos judiciais via PDPJ - Ambiente de Produção com Criptografia
API_VERSION=2.0.0

# Segurança
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true
ENABLE_TRUSTED_HOST=true
ENABLE_GLOBAL_EXCEPTION_HANDLER=true

# Logging
LOG_REQUEST_ID=true
LOG_FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} | {message}"
LOG_ROTATION_SIZE=100 MB
LOG_RETENTION_DAYS=30

# Health check
HEALTH_CHECK_INCLUDE_VERSION=true
HEALTH_CHECK_INCLUDE_TIMESTAMP=true

# Cache
CACHE_CRITICAL=true
CACHE_TTL=3600

# Observabilidade
ENABLE_METRICS=true
METRICS_PATH=/metrics
METRICS_PROTECTED=true
METRICS_CACHE_TTL=30

ENABLE_TRACING=true
TRACING_SAMPLE_RATE=0.1
TRACING_PROVIDER=opentelemetry
TRACING_SERVICE_NAME=pdpj-api
TRACING_SERVICE_VERSION=2.0.0

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging avançado
LOG_INCLUDE_USER_ID=true
LOG_INCLUDE_TRACE_ID=true

# VALORES CRIPTOGRAFADOS (substitua pelos valores reais criptografados)
# Use o script encryption-example.py para gerar estes valores
DATABASE_URL=gAAAAABh...  # Substitua pelo valor criptografado da URL do banco
REDIS_URL=gAAAAABh...     # Substitua pelo valor criptografado da URL do Redis
AWS_ACCESS_KEY_ID=gAAAAABh...  # Substitua pelo valor criptografado da AWS Access Key
AWS_SECRET_ACCESS_KEY=gAAAAABh...  # Substitua pelo valor criptografado da AWS Secret Key
PDPJ_API_TOKEN=gAAAAABh...      # Substitua pelo valor criptografado do token PDPJ
SECRET_KEY=gAAAAABh...          # Substitua pelo valor criptografado da chave secreta
SENTRY_DSN=gAAAAABh...         # Substitua pelo valor criptografado do DSN do Sentry
DATADOG_API_KEY=gAAAAABh...    # Substitua pelo valor criptografado da API Key do Datadog
NEWRELIC_LICENSE_KEY=gAAAAABh... # Substitua pelo valor criptografado da License Key do New Relic
HONEYCOMB_API_KEY=gAAAAABh...  # Substitua pelo valor criptografado da API Key do Honeycomb
