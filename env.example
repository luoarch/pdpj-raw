# ==============================
# PERFIL E AMBIENTE
# ==============================
PROFILE=development
ENVIRONMENT=development
DEBUG=True

# ==============================
# API METADATA
# ==============================
API_PREFIX=/api/v1
API_TITLE=PDPJ Process API - Ultra-Fast Edition
API_DESCRIPTION=API ultra-rápida para consulta e armazenamento de processos judiciais via PDPJ
API_VERSION=2.0.0

# ==============================
# SEGURANÇA
# ==============================
ENABLE_SECURITY_HEADERS=True
ENABLE_RATE_LIMITING=True
ENABLE_TRUSTED_HOST=True
ENABLE_GLOBAL_EXCEPTION_HANDLER=True
ENABLE_HTTPS_REDIRECT=False

HSTS_MAX_AGE=31536000
FRAME_OPTIONS=DENY
XSS_PROTECTION=1; mode=block
REFERRER_POLICY=strict-origin-when-cross-origin
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
SECURITY_HEADERS_CACHE_CONTROL=public, max-age=31536000, immutable
PERMISSIONS_POLICY=geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=()
COEP_POLICY=require-corp
COOP_POLICY=same-origin
CORP_POLICY=same-origin

SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key

# ==============================
# RATE LIMITING
# ==============================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==============================
# CACHE
# ==============================
CACHE_TTL=3600
CACHE_CRITICAL=False

# ==============================
# LOGGING
# ==============================
LOG_LEVEL=INFO
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} | {message}
LOG_FILE=logs/app.log
LOG_ROTATION_SIZE=100 MB
LOG_RETENTION_DAYS=30
LOG_REQUEST_ID=True

# ==============================
# MONITORAMENTO E MÉTRICAS
# ==============================
ENABLE_METRICS=True
METRICS_PATH=/metrics
METRICS_PROTECTED=True
METRICS_CACHE_TTL=30

ENABLE_TRACING=False
TRACING_SAMPLE_RATE=0.1
TRACING_PROVIDER=opentelemetry
TRACING_SERVICE_NAME=pdpj-api
TRACING_SERVICE_VERSION=2.0.0

# Serviços externos
SENTRY_DSN=
DATADOG_API_KEY=
NEWRELIC_LICENSE_KEY=
HONEYCOMB_API_KEY=

# ==============================
# CONEXÕES E PERFORMANCE
# ==============================
MAX_CONCURRENT_REQUESTS=100
MAX_CONCURRENT_DOWNLOADS=50
CONNECTION_POOL_SIZE=200
MAX_CONNECTIONS_PER_HOST=100
REQUEST_TIMEOUT=60
DOWNLOAD_TIMEOUT=300

TCP_NODELAY=True
TCP_KEEPALIVE=True
KEEPALIVE_TIMEOUT=30

HTTP2_ENABLED=True
ENABLE_GZIP_COMPRESSION=True
GZIP_MINIMUM_SIZE=1000

# ==============================
# BANCO DE DADOS
# ==============================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pdpj_db

# ==============================
# REDIS
# ==============================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=True
REDIS_SOCKET_KEEPALIVE=True
REDIS_SOCKET_KEEPALIVE_OPTIONS={"1": 1, "2": 3, "3": 5}

# ==============================
# CELERY
# ==============================
CELERY_WORKERS=4
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ==============================
# AWS S3
# ==============================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=pdpj-documents

# ==============================
# PDPJ REQUESTS
# ==============================
PDPJ_API_BASE_URL=https://portaldeservicos.pdpj.jus.br/api/v2
PDPJ_API_TOKEN=your_pdpj_token

# ==============================
# BULK PROCESSAMENTO
# ==============================
BULK_BATCH_SIZE=1000
BULK_INSERT_CHUNK_SIZE=500

# ==============================
# SERVIDOR
# ==============================
UVICORN_WORKERS=4

# ==============================
# CORS
# ==============================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ==============================
# HEALTH CHECK
# ==============================
HEALTH_CHECK_INCLUDE_VERSION=True
HEALTH_CHECK_INCLUDE_TIMESTAMP=True